<h1><%= page_heading "Trees" %></h1>

<p>All trees added to Pine.</p>

<% if current_user -%>
<%= link_to 'Add a tree', new_tree_path, class: "btn btn-secondary" %>
<%- end %>

<table class="table mt-4">
    <caption>List of all trees on Pine</caption>
    <thead class="thead-light">
        <tr>
            <th scope="col">Common name</th>
            <th scope="col">Added by</th>
            <th scope="col">Last updated</th>
        </tr>
    </thead>

    <tbody>
        <% @trees.each do |tree| %>
        <tr>
            <td><%= link_to tree.common_name, tree_with_slug_path(tree.common_name.parameterize, tree) %></td>
            <td><%= tree.user.display_name %></td>
            <td><%= local_time_ago tree.updated_at %></td>
        </tr>
        <% end %>
    </tbody>
</table>
